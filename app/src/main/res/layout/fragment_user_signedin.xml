<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/usersignedin_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.User.UserSignedIn">

    <ImageButton
        android:id="@+id/managementButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_menu_24"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="Management"
        android:background="@android:color/transparent" />

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/managementButton"
        android:layout_marginTop="16dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        android:contentDescription="Profile Picture" />

    <LinearLayout
        android:id="@+id/userInfoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profileImageView"
        android:layout_alignTop="@id/profileImageView"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bioTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your bio here..."
                android:layout_toStartOf="@id/editBioButton"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/bioEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:hint="Write your bio..."
                android:layout_toStartOf="@id/saveBioButton"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:id="@+id/editBioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_edit_24"
                android:contentDescription="Edit Bio"
                android:background="@android:color/transparent"
                android:layout_alignBottom="@id/bioTextView"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/saveBioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:visibility="gone"
                android:layout_alignBottom="@id/bioEditText"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/recipesScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImageView"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:id="@+id/recipesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/addRecipeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_circle_24"
        android:contentDescription="Add Recipe"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

</RelativeLayout>
